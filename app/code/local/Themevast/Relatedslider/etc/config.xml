<?xml version="1.0"?>
<config>
    <modules>
        <Themevast_Relatedslider>
            <version>0.1.0</version>
        </Themevast_Relatedslider>
    </modules>
    <frontend>
        <routers>
            <relatedslider>
                <use>standard</use>
                <args>
                    <module>Themevast_Relatedslider</module>
                    <frontName>relatedslider</frontName>
                </args>
            </relatedslider>
        </routers>
        <layout>
            <updates>
                <relatedslider>
                    <file>themevast/relatedslider.xml</file>
                </relatedslider>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<relatedslider>
				<use>admin</use>
				<args>
					<module>Themevast_Relatedslider</module>
					<frontName>relatedslider</frontName>
				</args>
			</relatedslider>
        </routers>
    </admin>  
    <global>
        <blocks>
            <relatedslider>
                <class>Themevast_Relatedslider_Block</class>
            </relatedslider>
        </blocks>
        <helpers>
            <relatedslider>
                <class>Themevast_Relatedslider_Helper</class>
            </relatedslider>
        </helpers>
    </global>
	<default>
		<relatedslider>
			<general>
			    <enabled>1</enabled>
			    <title>Related</title>
                <autoPlay>0</autoPlay>
                <navigation>1</navigation>
                <pagination>0</pagination>
                <slideSpeed>600</slideSpeed>
                <stopOnHover>1</stopOnHover>
                <rows>1</rows>
                <loop>1</loop>   
                <responsive>0:{items:1},480:{items:2},768:{items:3},1000:{items:4}</responsive>
                <margin>30</margin>
			    <price>1</price>
			    <cart>1</cart>
			    <review>0</review>
			    <qty>15</qty>
			    <widthImage>300</widthImage>
			    <heightImage>300</heightImage>
			</general>
		</relatedslider>
	</default>
</config>

