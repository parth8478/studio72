                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>For example: "0:{items:1},600:{items:3},1000:{items:4}"</comment>
                        </responsive>
                        <margin translate="label comment">
